<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Snippity</title>
    <!-- Styles -->
    <link href="/assets/chota.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/cm/lib/codemirror.css">
    <link rel="stylesheet" href="/assets/cm/theme/monokai.css">
    <link rel="stylesheet" href="/assets/app.css">
</head>
<body class="padding-top">
    <div class="container" id="app">
        <div class="row is-center">
            <div class="col-6">
                <nav class="nav mb-3">
                  <div class="nav-left">
                    <a class="brand is-paddingless" href="/">Snippety</a>
                  </div>
                  <div class="nav-right">
                    <a href="https://github.com/sotoplatero/snippy" >code</a>
                  </div>
                </nav>                
                {# <h2>Snippety <small><a href="https://github.com/sotoplatero/snippy">code</a></small></h2> #}
                <!-- <p><input type="text" name="title" placeholder="Title"></p> -->
                <form method="POST">
                    <p><textarea name="code" id="code">{{ code }}</textarea></p>
                    <p>
                        <button id="btn-photo">Photo</button>
                        <a href="https://twitter.com/intent/tweet" id="btn-twitter" class="button" >Twitter</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <script src="/assets/cm/lib/codemirror.js"></script> 
    <script src="/assets/cm/mode/javascript/javascript.js"></script>   
    <script src="/assets/html2canvas.min.js"></script>    
    <script src="/assets/app.js"></script>    
    <script >
        CodeMirror.fromTextArea(document.getElementById("code"), {
            value: "Page\n",
            mode:  "javascript",
            lineNumbers: true,
            lineWrapping: true,
            theme: 'monokai',
            readOnly: 'nocursor'
            // mode: "htmlmixed"
        });        
    </script>    
</body>
</html>
